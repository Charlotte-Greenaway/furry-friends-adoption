---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../consts";
import LottieAnimation from "astro-integration-lottie/Lottie.astro";
//get search query from url message=
const message = Astro.url.searchParams.get("message") || "";
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
  </head>
  <body>
    <Header />
    <main class="bg-background">
      <form class="p-8 max-w-3xl mx-auto">
        <div class="grid grid-cols-2 items-center">
          <h1
            class="text-5xl xl:text-6xl 2xl:text-7xl font-bold chewy text-accent"
          >
            Contact Us
          </h1>
          <div style="width: 200px; height: 200px">
            <LottieAnimation
              src="/assets/peeping-cat.json"
              autoplay="visible"
              loop={true}
            />
          </div>
        </div>
        <div class="pb-2 xl:pb-8">
          <h2 class="text-2xl 2xl:text-4xl font-semibold">
            We'd Love to Hear From You
          </h2>
          <p class="text-base xl:text-lg 2xl:text-2xl">
            Have a question, comment, or concern? Reach out to us using the form
            below and we'll get back to you as soon as possible.
          </p>
          <div class="grid grid-cols-1 gap-4">
            <label for="name" class="text-lg font-semibold"> Name </label>
            <input
              type="text"
              id="name"
              name="name"
              class="border-2 border-accent rounded-lg p-4 chewy"
              required
              placeholder="Your Name"
            />
            <label for="email" class="text-lg font-semibold"> Email </label>
            <input
              type="email"
              id="email"
              name="email"
              class="border-2 border-accent rounded-lg p-4 chewy"
              required
              placeholder="your-email@provider.com"
            />
            <label for="message" class="text-lg font-semibold"> Message </label>
            <textarea
              id="message"
              name="message"
              class="border-2 border-accent rounded-lg p-4 chewy"
              rows="4"
              placeholder="Enter your message here"
              required>{message}</textarea
            >
            <button
              type="submit"
              class="chewy bg-accent text-white font-semibold py-2 px-4 rounded-lg mt-4 border-accent hover:bg-background hover:text-accent border-2 transition-all"
            >
              Send Message
            </button>
          </div>
        </div>
      </form>
    </main>
    <Footer />
  </body>
</html>
