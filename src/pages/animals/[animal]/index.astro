---
import BaseHead from '../../../components/BaseHead.astro';
import Header from '../../../components/Header.astro';
import Footer from '../../../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../../../consts';
import { getCollection } from 'astro:content';
import FormattedDate from '../../../components/FormattedDate.astro';

export const prerender = true;

// Generate static paths for animals
export async function getStaticPaths() {
  return [
    { params: { animal: 'dogs' } },
    { params: { animal: 'cats' } }
  ];
}

// Fetch posts dynamically based on the `animals` param
const { animal } = Astro.params;

//if animal does not equal dogs or cats, redirect to /dogs
if (animal !== 'dogs' && animal !== 'cats') {
  return {
    headers: {
      location: '/animals/dogs'
    },
    status: 302
  };
}

const posts = (await getCollection(animal)).sort(
  (a, b) => a.data.pubDate.valueOf() - b.data.pubDate.valueOf()
);
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
		<style>
			ul {
				display: flex;
				flex-wrap: wrap;
				gap: 2rem;
				list-style-type: none;
				margin: 0;
				padding: 0;
			}
			ul li {
				width: calc(50% - 1rem);
			}
			ul li * {
				text-decoration: none;
				transition: 0.2s ease;
			}
			ul li:first-child {
				width: 100%;
				margin-bottom: 1rem;
				text-align: center;
			}
			ul li:first-child img {
				width: 100%;
			}
			ul li:first-child .title {
				font-size: 2.369rem;
			}
			ul li img {
				margin-bottom: 0.5rem;
				border-radius: 12px;
			}
			ul li a {
				display: block;
			}
			.title {
				margin: 0;
				color: rgb(var(--black));
				line-height: 1;
			}
			.date {
				margin: 0;
				color: rgb(var(--gray));
			}
			ul li a:hover h4,
			ul li a:hover .date {
				color: rgb(var(--accent));
			}
			ul a:hover img {
				box-shadow: var(--box-shadow);
			}
			@media (max-width: 720px) {
				ul {
					gap: 0.5em;
				}
				ul li {
					width: 100%;
					text-align: center;
				}
				ul li:first-child {
					margin-bottom: 0;
				}
				ul li:first-child .title {
					font-size: 1.563em;
				}
			}
		</style>
	</head>
	<body>
		<Header />
		<main>
			<section class="max-w-5xl mx-auto p-8">
				<h1 class="chewy text-secondary mb-2">Meet Our {animal}</h1>
				<ul class="mx-auto">
					{
						posts.map((post) => (
							<li>
								<a href={`/animals/${animal}/${post.slug}/`}>
									<img width={720} height={360} src={post.data.heroImage} alt={post.data.title} />
									<h4 class="title chewy">{post.data.title}</h4>
									<p class="date">
										Rescued Since <FormattedDate date={post.data.pubDate} />
									</p>
								</a>
							</li>
						))
					}
				</ul>
			</section>
		</main>
		<Footer />
	</body>
</html>
