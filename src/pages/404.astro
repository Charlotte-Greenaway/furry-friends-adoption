---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../consts";
import LottieAnimation from "astro-integration-lottie/Lottie.astro";
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
  </head>
  <body>
    <Header />
    <main class="bg-background text-center max-w-5xl mx-auto">
      <h1 class="text-5xl xl:text-6xl 2xl:text-7xl font-bold chewy text-accent">
        404 - Page Not Found
      </h1>
      <div class="mx-auto" style="max-width:400px;">
        <LottieAnimation src="assets/error-cat.json" autoplay="visible" />
      </div>
      <a href="/">
        <button
          class="chewy bg-accent text-white font-semibold py-2 px-4 rounded-lg mt-4 border-accent hover:bg-background hover:text-accent border-2 transition-all"
        >
          Go Home
        </button>
      </a>
    </main>
    <Footer />
  </body>
</html>
